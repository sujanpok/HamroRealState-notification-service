apiVersion: v1
kind: Secret
metadata:
  name: {{ .Release.Name }}-secret
  namespace: {{ .Release.Namespace }}
  labels:
    app: {{ .Values.appName | default "notification-service" }}
    chart: {{ .Chart.Name }}-{{ .Chart.Version }}
    release: {{ .Release.Name }}
type: Opaque
data:
  RESEND_API_KEY: {{ .Values.secrets.RESEND_API_KEY | b64enc }}
  AUTH_HEADER_KEY: {{ .Values.secrets.AUTH_HEADER_KEY | b64enc }}
